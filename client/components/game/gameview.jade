#navigation.col-md-12
    //- #back
    #reset
    #level-no
    #status.play
#level.col-md-10
    .level-inner
        dim-grid-directive
#instructions.col-md-2
    .instructions-inner
        ul
          li(ng-repeat='ins in vm.instructions') 
            img(id='{{ins.name}}' 
                ng-src='{{ins.src}}' 
                ng-click='vm.addToProgram(ins)' 
                data-drag='true' 
                index='{{$index}}' 
                jqyoui-draggable="{onStart:'vm.replace'}")
#program.col-md-11
    .program-inner(data-drop="true" 
                    jqyoui-droppable="{onDrop:'vm.addToProgram'}")
        ul(dnd-list="vm.program")
            li( ng-repeat='ins in vm.program track by $index'
                dnd-draggable='ins'
                dnd-moved="vm.program.splice($index, 1)"
                dnd-effect-allowed="move") 
                img(class='{{ins.name}}' 
                    id='{{$index}}' 
                    ng-src='{{ins.src}}' 
                    ng-click='vm.removeFromProgram($index)')
